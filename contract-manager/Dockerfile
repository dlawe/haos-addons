# Base image f端r Home Assistant
ARG BUILD_FROM
FROM $BUILD_FROM

# Installiere notwendige Pakete, falls erforderlich
RUN apk add --no-cache \
  python3 \
  py3-pip

# Setze das Arbeitsverzeichnis f端r das Add-on
WORKDIR /data

# Kopiere die Dateien ins Arbeitsverzeichnis
COPY run.sh /run.sh

# Setze die Ausf端hrungsrechte f端r das Skript
RUN chmod a+x /run.sh

# Starte das Skript, wenn der Container startet
CMD ["/run.sh"]
